<div class="container-fluid">
  <h1>ブログ投稿確認</h1>
  <div><%= image_tag "umi.jpg" %></div>
  
    
  <div class="row">
    <div class="nav nav-sidebar col-md-3 col-xs-12">
      <ul id="list"></ul>
            <li class="active"><a href=""/"">ホーム</a></li>
            <li><a href="/blogs/new">新規作成</a></li>
            <li><a href="/blogs">ブログ一覧</a></li>
        </ul>
    </div>

    <div class="col-md-9 col-xs-12">  
        <p>タイトル: <%= @blog.title %></p>
        <p>内容: <%= @blog.content %></p>
        <p>画像：<%= image_tag @blog.blog_image.url %></p><br><br>
      <div class= "button">
        <a href="/blogs" class="btn btn-default btn-sm" role="button">ブログ一覧へ</a>
      </div>
    </div>
  </div>
  <% unless @blog.user_id == current_user.id %>
    <div class= "button">  
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
</div>